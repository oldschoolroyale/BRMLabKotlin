<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F9FBFF">
    <View
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/ic_top_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fragment_note_circle_image"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="8dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#fff"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_note_name"
        android:layout_marginStart="18dp"
        android:layout_marginTop="32dp"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragment_note_circle_image"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/fragment_note_circle_image"
        app:layout_constraintTop_toBottomOf="@id/fragment_note_name"
        android:text="Мед. представитель"
        android:textColor="#fff"
        android:textSize="16sp"/>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/fragment_note_view_pager2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/fragment_note_circle_image">
    </androidx.viewpager2.widget.ViewPager2>
    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_note_view_fragment"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/fragment_note_view_pager2" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_note_indicator_constraint"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/fragment_note_view_pager2"/>

<androidx.cardview.widget.CardView
    android:id="@+id/fragment_note_recycler_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="24dp"
    android:background="#fff"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    android:paddingBottom="5dp"
    app:layout_constraintTop_toBottomOf="@+id/fragment_note_view_fragment"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintHorizontal_bias="0.479"
    android:layout_marginBottom="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="#818181"/>
            <TextView
                android:id="@+id/fragment_note_date_text"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="#818181"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/fragment_note_ll_empty"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/empty"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty_text"
                android:gravity="center"
                android:textSize="15sp"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_note_recycler_view"
            android:layout_marginBottom="15dp"/>

        <com.agrawalsuneet.dotsloader.loaders.LazyLoader
            android:id="@+id/fragment_notes_dots_loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            app:lazyloader_dotsDist="10dp"
            android:visibility="gone"
            app:lazyloader_dotsRadius="5dp"
            app:lazyloader_firstDelayDur="150"
            app:lazyloader_firstDotColor="@android:color/holo_red_dark"
            app:lazyloader_interpolator="@android:anim/decelerate_interpolator"
            app:lazyloader_secondDelayDur="300"
            app:lazyloader_secondDotColor="@color/colorPrimary"
            app:lazyloader_thirdDotColor="@color/yellow"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>



